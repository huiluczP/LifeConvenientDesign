<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <ImageView
            android:id="@+id/itemtypeicon"
            android:layout_width="40sp"
            android:layout_height="40sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/itemtype"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="20sp"
            android:src="@drawable/studying"/>
        <TextView
            android:id="@+id/itemtype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/typestudy"
            android:textSize="30sp"
            android:layout_marginTop="5sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/itemtypeicon"/>
        <TextView
            android:id="@+id/itemcost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:textColor="@color/costcolor"
            android:hint="@string/itemcost"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="50dp"/>
</android.support.constraint.ConstraintLayout>